{
  "name": "scoretrac.kr",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "dev": "concurrently \"yarn start:dev-server\" \"yarn start:mock-db\"",
    "start:dev-server": "razzle start",
    "build": "razzle build",
    "start": "NODE_ENV=production node build/server.js",
    "db:seed": "ts-node --project tsconfig.test.json node_modules/.bin/fixtures -cn default -c ./ormconfig.js ./src/server/db/fixtures",
    "db:drop": "NODE_PATH=./src npx ts-node --project tsconfig.test.json src/server/db/drop-database.ts",
    "build-and-start": "CI=false yarn build && yarn start",
    "start-and-test": "PORT=3000 server-test build-and-start http://localhost:3000",
    "format": "prettier --write . '**/*.{json,css,scss,md,ts,tsx}'",
    "format:write": "prettier --write . '**/*.{json,css,scss,md,ts,tsx}'",
    "format:check": "prettier --check . '**/*.{json,css,scss,md,ts,tsx}'",
    "lint": "tslint -c tslint.json --project . --format verbose",
    "test": "TZ=UTC razzle test --env=jest-environment-jsdom-sixteen",
    "test:unit:ci": "TZ=UTC razzle test --env=jest-environment-jsdom-sixteen --watchAll=false --coverage",
    "cy:open": "cypress open --env coverage=false",
    "cy:run": "cypress run --record --key 5fba4d1b-5dc7-4147-8aad-bc4cfe5419df",
    "test:e2e:ci": "yarn run cy:run -s '**/e2e/*.e2e.feature' --env coverage=false",
    "test:e2e": "yarn run test:e2e:ci --headed --env coverage=false",
    "test:integration:ci": "yarn start-and-test 'yarn run cy:run -s '**/integration/*.integration.feature' --env coverage=true'",
    "test:integration": "yarn start-and-test 'yarn run cy:run -s '**/integration/*.integration.feature' --headed --env coverage=false'",
    "validate": "yarn format:check && yarn lint && yarn test:unit:ci && yarn test:integration:ci",
    "verify": "yarn validate"
  },
  "dependencies": {
    "@material-ui/core": "^4.10.0",
    "@material-ui/lab": "^4.0.0-alpha.55",
    "@reduxjs/toolkit": "^1.3.6",
    "apollo-server": "^2.14.5",
    "apollo-server-express": "^2.14.5",
    "date-fns": "^2.14.0",
    "express": "^4.17.1",
    "express-static-gzip": "^2.0.6",
    "graphql": "^15.1.0",
    "graphql-hooks": "^4.5.0",
    "graphql-hooks-memcache": "^1.3.3",
    "graphql-hooks-ssr": "^1.1.5",
    "i18next": "^19.4.5",
    "i18next-browser-languagedetector": "^4.2.0",
    "i18next-fs-backend": "^1.0.3",
    "i18next-http-backend": "^1.0.13",
    "i18next-http-middleware": "^2.0.0",
    "isomorphic-unfetch": "^3.0.0",
    "mdi-material-ui": "^6.16.0",
    "numbro": "^2.3.0",
    "pg": "^8.2.1",
    "razzle": "^3.1.3",
    "razzle-plugin-typescript": "^3.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.5.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "serialize-javascript": "^3.1.0",
    "type-graphql": "^1.0.0-rc.2",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@cypress/code-coverage": "^3.8.0",
    "@cypress/webpack-preprocessor": "^5.4.1",
    "@testing-library/cypress": "^6.0.0",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^11.4.2",
    "@types/cypress": "^1.1.3",
    "@types/cypress-cucumber-preprocessor": "^1.14.1",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/jest": "^25.2.3",
    "@types/numbro": "^1.9.3",
    "@types/ora": "^3.2.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/serialize-javascript": "^1.5.0",
    "@types/supertest": "^2.0.9",
    "@types/testing-library__jest-dom": "^5.9.1",
    "@types/webpack-env": "^1.15.2",
    "apollo-server-testing": "^2.15.0",
    "commitlint": "^8.3.5",
    "compression-webpack-plugin": "^4.0.0",
    "concurrently": "^5.2.0",
    "cypress": "^4.7.0",
    "cypress-cucumber-preprocessor": "^2.3.1",
    "cz-conventional-changelog": "3.2.0",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "istanbul-lib-coverage": "^3.0.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-environment-node": "^26.0.1",
    "nyc": "^15.0.1",
    "ora": "^4.0.4",
    "pg-connection-string": "^2.2.3",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "razzle-dev-utils": "^3.1.3",
    "razzle-heroku": "^3.0.0",
    "razzle-plugin-svg-react-component": "^1.0.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.2.0",
    "start-server-and-test": "^1.11.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "typeorm-fixtures-cli": "^1.7.0",
    "typescript": "^3.9.3",
    "webpack-graphql-loader": "^1.0.2"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/index.ts",
      "!src/**/*.model.ts",
      "!**/*.d.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "cypress/tests"
  }
}
