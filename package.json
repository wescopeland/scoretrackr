{
  "name": "scoretrackr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build-and-start": "next build && next start",
    "start-and-test": "PORT=3000 server-test build-and-start http://localhost:3000",
    "format": "prettier --write . '**/*.{ts,tsx}'",
    "format:write": "prettier --write . '**/*.{ts,tsx}'",
    "format:check": "prettier --check . '**/*.{ts,tsx}'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --passWithNoTests",
    "cy:open": "cypress open --env coverage=false",
    "cy:run": "cypress run",
    "test:e2e:ci": "yarn run cy:run -s '**/*.e2e.feature' --env coverage=false",
    "test:e2e": "yarn run test:e2e:ci --headed --env coverage=false",
    "test:integration:ci": "yarn start-and-test 'yarn run cy:run -s '**/*.integration.feature' --env coverage=true'",
    "test:integration": "yarn start-and-test 'yarn run cy:run -s '**/*.integration.feature' --headed --env coverage=false'",
    "verify": "yarn format:check && yarn lint && yarn test && yarn test:integration:ci",
    "validate": "yarn verify",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build"
  },
  "dependencies": {
    "next": "9.4.2",
    "preact": "^10.2.1",
    "preact-render-to-string": "^5.1.4",
    "react": "github:preact-compat/react#1.0.0",
    "react-dom": "github:preact-compat/react-dom#1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "@commitlint/config-conventional": "^8.3.4",
    "@cypress/code-coverage": "^3.7.5",
    "@cypress/webpack-preprocessor": "^5.4.1",
    "@next/bundle-analyzer": "^9.4.2",
    "@testing-library/cypress": "^6.0.0",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@types/cypress": "^1.1.3",
    "@types/cypress-cucumber-preprocessor": "^1.14.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.2",
    "commitlint": "^8.3.5",
    "cross-env": "^7.0.2",
    "cypress": "^4.6.0",
    "cypress-cucumber-preprocessor": "^2.3.1",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "husky": "^4.2.5",
    "istanbul-lib-coverage": "^3.0.0",
    "jest": "^26.0.1",
    "nyc": "^15.0.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^2.0.1",
    "start-server-and-test": "^1.11.0",
    "ts-jest": "^26.0.0",
    "typescript": "~3.8.3",
    "webpack": "^4.18.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "cypress/tests"
  }
}
